#!/usr/bin/env bash

restic=/usr/bin/restic

# Source credentials
. $HOME/.restic.env

# Unlock restic repository
$restic unlock

# Backup documents folder in home directory
$restic backup --verbose "$HOME/Documents"

# Forget and prune backups
$restic forget --keep-daily 7 --keep-weekly 5 --keep-monthly 4 --prune
