[colors]
background = #1d1f21
background-wm = #444444
background-alt = #2d2d2d
foreground = #d8dee9
foreground-alt = #555555
primary = #3c71ea
alert = #ed0b0b
bordercolor = #4c566a

[settings]
format-background = ${colors.background-alt}
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0 

; ==================
; Primary Bar Config
; ==================

[bar/bar]
monitor = ${env:MONITOR:}
wm-restack = bspwm
enable-ipc = true
fixed-center = false
bottom = false

border-bottom-size = 2
border-bottom-color = ${colors.bordercolor}

width = 100%
height = 25

background = ${colors.background}
foreground = ${colors.foreground}

padding = 0
module-margin-left = 0.1
module-margin-right = 0.1

font-0 = Fira Code Nerd Font:pixelsize=10;1
font-1 = NotoColorEmoji:fontformat=truetype:scale=10:antialias=false;

modules-left = bspwm xwindow
modules-right = cpu memory updates

tray-position = right
tray-padding = 1
tray-background = ${colors.background-alt}
tray-offset-x = 0
tray-offset-y = 0
tray-scale = 1.0

cursor-click = pointer
cursor-scroll = ns-resize

[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-background = ${colors.background-wm}
label-focused-underline = ${colors.primary}
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1

; ==================
; Custom Modules
; ==================

; Display window name
[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

; Display RAM usage
[module/memory]
type = custom/script
exec = $HOME/.config/polybar/scripts/polymemory
label = "%output%"
interval = 10
format-prefix = " "

; Display package updates
[module/updates]	
type = custom/script	
exec = $HOME/.config/polybar/scripts/polypackagecount	
label = "%output%"	
interval = 3600

; Display CPU usage
[module/cpu]
type = internal/cpu
interval = 2
label = %percentage%%
format-prefix = " "

; vim:ft=dosini
